<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.forecast.MapFragment">


    <com.google.android.gms.maps.MapView
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/mapview"
        android:layout_height="match_parent"
        android:layout_width="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ChartViewButton"
        android:text="ForeCast View"
        android:background="@drawable/shape_background"
        android:layout_marginTop="515dp"
        />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:alpha="0.5"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat :  "/>
            <TextView
                android:id="@+id/lat_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13.000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lng : "/>
            <TextView
                android:id="@+id/lng_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="101.000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x : "/>
                <TextView
                    android:id="@+id/array_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="71"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y : "/>
            <TextView
                android:id="@+id/array_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"/>

            </LinearLayout>


        </LinearLayout>

     </LinearLayout>




</FrameLayout>
